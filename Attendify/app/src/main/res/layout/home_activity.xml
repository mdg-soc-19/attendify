<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#FFA259"
    android:orientation="vertical"
    tools:context="com.SOC.attendify.UserActivity">

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/aclonica"
        android:gravity="center"
        android:text="Welcome user!"
        android:textColor="#FFF3AF"
        android:textSize="40dp" />

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="500dp"
        android:background="#FE6845"
        android:fontFamily="@font/carter_one"
        android:text="Logout"
        android:textColor="#FFF3AF" />

    <Button
        android:id="@+id/button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="100dp"
        android:background="#FE6845"
        android:fontFamily="@font/carter_one"
        android:text="ATTENDANCE STATS"
        android:textColor="#FFF3AF" />

    <Button
        android:id="@+id/button2"
        style="border-radius:5px solid red"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="100dp"
        android:background="#FE6845"
        android:fontFamily="@font/carter_one"
        android:text="Preplanning"
        android:textColor="#FFF3AF" />

    <Button
        android:id="@+id/button3"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="300dp"
        android:background="#FE6845"
        android:fontFamily="@font/carter_one"
        android:text="Notifications"
        android:textColor="#FFF3AF" />

    <Button
        android:id="@+id/button4"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="300dp"
        android:background="#FE6845"
        android:fontFamily="@font/carter_one"
        android:text="Rescheduled classes"
        android:textColor="#FFF3AF" />

    <Button
        android:id="@+id/button5"
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_marginTop="500dp"
        android:background="#FE6845"
        android:fontFamily="@font/carter_one"
        android:text="About us"
        android:textColor="#FFF3AF" />
</RelativeLayout>